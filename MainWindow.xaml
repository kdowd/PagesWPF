<Window x:Class="PagesWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PagesWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900" Background="#FFFF8282">
    <Grid>
         <Frame x:Name="App" Margin="0,50,0,0" NavigationUIVisibility="Hidden"/>
        <StackPanel Orientation="Horizontal" Height="100" HorizontalAlignment="Right" VerticalAlignment="Top"   >
            <Button Content="Intro" Padding="10 10 10 10" MinWidth="100" Click="ShowIntro" />
            <Button Content="Play Game" Padding="10 10 10 10" MinWidth="100" Click="ShowGame" />
            <Button Content="Quit" Padding="10 10 10 10" MinWidth="100" Click="QuitApp" />
        </StackPanel>
       

    </Grid>
</Window>
